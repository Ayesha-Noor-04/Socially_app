<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/sb"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/statusbar"
        >

    </ImageView>


    <RelativeLayout
        android:id="@+id/storypic"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_below="@+id/sb"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/birdpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/craig"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:src="@drawable/whitestoryline"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp" />

        <ImageView

            android:layout_width="95dp"
            android:layout_height="20dp"
            android:src="@drawable/whitestoryline"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="110dp" />
        <ImageView

            android:layout_width="95dp"
            android:layout_height="20dp"
            android:src="@drawable/whitestoryline"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="210dp" />

        <ImageView

            android:layout_width="95dp"
            android:layout_height="20dp"
            android:src="@drawable/graystoryline"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="310dp" />

        <ImageView
            android:id="@+id/storyline2"
            android:layout_width="48dp"
            android:layout_height="30dp"
            android:src="@drawable/storyline2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="360dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/craigpfp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/crossbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/crosswhite"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="370dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="craig_love"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4h"
            android:textColor="@color/lightgray"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="120dp">

        </TextView>




    </RelativeLayout>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:src="@drawable/sendmessagebar"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="20dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="652dp"
        android:layout_marginLeft="30dp"
        android:text="⚪️"
        android:textSize="30dp">

    </TextView>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:src="@drawable/filledcam"
        android:layout_marginTop="658dp"
        android:layout_marginLeft="34dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="662dp"
        android:layout_marginLeft="75dp"
        android:text="Send Message"
        android:textSize="18dp"
        android:textColor="@color/maroon3">

    </TextView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/aero"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="663dp">

    </ImageView>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/threedots"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="663dp">

    </ImageView>



    <ImageView
        android:id="@+id/bar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ine"
        android:paddingBottom="10dp">


    </ImageView>


</RelativeLayout>