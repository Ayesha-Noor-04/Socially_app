<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/statusbar1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/statusbar12"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/whitestatusbar" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_below="@id/statusbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:hint="Search"

            android:drawableStart="@drawable/search"
            android:background="@drawable/searchbarrectangle"
            android:textColor="@color/maroon"
            android:textColorHint="@color/maroon"
            android:layout_marginBottom="3dp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/maroon"
                    android:text="Shop">
                </Button><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                    android:text="Style">
                </Button><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                    android:text="Sports">
                </Button><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                    android:text="Auto">
                </Button><Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                    android:text="Music">
                </Button>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:layout_above="@id/tabbar"
        android:fillViewport="true">

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />
 <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />
 <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="4"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="4"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/birdpic2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_rowSpan="2"
                android:scaleType="centerCrop"
                android:src="@drawable/random10" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/random1" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/random3" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/random4" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/random5" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/random6" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="4"
                android:layout_columnSpan="2"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/random3" />



            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="4"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/random8" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="5"
                android:layout_column="0"
                android:scaleType="centerCrop"
                android:src="@drawable/random9" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="5"
                android:layout_column="1"
                android:scaleType="centerCrop"
                android:src="@drawable/random2" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_row="5"
                android:layout_column="2"
                android:scaleType="centerCrop"
                android:src="@drawable/random1" />




        </GridLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageView
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginBottom="0dp"
            android:src="@drawable/tabbar" />
        <LinearLayout
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"

            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="20dp"
            >

        </LinearLayout>


        <LinearLayout
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="20dp"
            >

        </LinearLayout>

        <LinearLayout
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_marginLeft="340dp"
            android:layout_marginRight="0dp"

            >

        </LinearLayout>


        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ine" />
    </RelativeLayout>
</RelativeLayout>
