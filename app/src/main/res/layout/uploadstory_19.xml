<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/sb"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/statusbar"
        >

    </ImageView>

    <RelativeLayout
        android:id="@+id/storypic"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_below="@+id/sb"
        >

        <ImageView
            android:id="@+id/birdpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/birdpic2"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/topbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/storyuploading"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true">

        </ImageView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/poststory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/storypic"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/editstory">

    </ImageView>

</RelativeLayout>