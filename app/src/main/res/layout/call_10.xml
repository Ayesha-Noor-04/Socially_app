<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightmaroon">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/mompic"
        android:layout_centerInParent="true"
        ></ImageView>

    <TextView
        android:id="@+id/mother"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother ❤️"
        android:layout_below="@+id/pic"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:12"
        android:layout_below="@+id/mother"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="5dp">

    </TextView>


    <ImageView
        android:id="@+id/call"
        android:layout_width="70dp"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/callicons"
        android:layout_centerHorizontal="true">

    </ImageView>

    <ImageView
        android:layout_width="70dp"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/soundon"

        android:layout_marginLeft="300dp"

        >

    </ImageView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_alignParentBottom="true"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/firsticon"

        android:layout_marginLeft="30dp"

        >

    </de.hdodenhof.circleimageview.CircleImageView>



</RelativeLayout>