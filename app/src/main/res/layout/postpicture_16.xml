<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >


    <ImageView
        android:id="@+id/sb13"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/whitestatusbar"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sb13"
        android:text="Cancel"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/maroon"
        >

    </TextView>

    <TextView
        android:id="@+id/recents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sb13"
        android:text="Recents"
        android:textSize="21dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:layout_centerHorizontal="true">

    </TextView>

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_below="@id/sb13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/down"
        android:layout_toEndOf="@+id/recents"
        android:layout_toRightOf="@+id/recents">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sb13"
        android:text="Next"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/maroon"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        >

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_below="@id/recents"
        android:id="@+id/selectpic"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/pic0">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/part2"

        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@+id/selectpic"
        android:orientation="vertical"
        android:weightSum="2">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:columnCount="4"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:padding="0dp">

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic1"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic2"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic3"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic4"/>


                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic5"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic7"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic8"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic9"/>


                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic10"/>

                <ImageView android:layout_width="0dp"

                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic11"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic12"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic13"/>


                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic14"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic15"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic16"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic17"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic18"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1
" android:scaleType="centerCrop"
                    android:src="@drawable/pic19"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic20"/>

                <ImageView android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_columnWeight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic21"/>

            </GridLayout>
        </ScrollView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/part2"
        android:id="@+id/belowbar"
        android:weightSum="3"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library"
                android:textColor="@color/maroon"
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_centerInParent="true">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="@color/maroon"

                android:textSize="22dp"
                android:layout_centerInParent="true">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video"
                android:textColor="@color/maroon"

                android:textSize="22dp"
                android:layout_centerInParent="true">

            </TextView>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ine"
        android:paddingBottom="10dp">

    </ImageView>

</RelativeLayout>