<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Top Status Bar -->
    <ImageView
        android:id="@+id/sb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/statusbar" />

    <!-- Bottom highlight bar, aligned to parent bottom -->
    <ImageView
        android:id="@+id/highlightbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/highlightbar"
        android:scaleType="centerCrop" />

    <!-- Floating heart above bottom bar -->
    <ImageView
        android:id="@+id/floatingHeart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@id/highlightbar"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="26dp"
        android:src="@drawable/heart1" />

    <!-- Story section between top and bottom -->
    <RelativeLayout
        android:id="@+id/storypic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sb"
        android:layout_above="@id/highlightbar"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Background bird image -->
        <ImageView
            android:id="@+id/birdpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/birdpic2"
            android:scaleType="centerCrop" />

        <!-- Empty CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/emptyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp" />

        <!-- Progress lines at top -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/whitestoryline"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/graystoryline"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/graystoryline"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/graystoryline"
                android:padding="5dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/graystoryline"
                android:padding="5dp" />
        </LinearLayout>

        <!-- Profile & top bar icons -->
        <ImageView
            android:id="@+id/profilepic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/gprofile" />

        <ImageView
            android:id="@+id/crossbutton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="370dp"
            android:src="@drawable/crosswhite" />

        <!-- Highlight text -->
        <TextView
            android:id="@+id/highlighttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Highlight"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginStart="50dp"
            android:textStyle="bold" />

        <!-- Song & artist info -->
        <TextView
            android:layout_below="@id/highlighttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist . "
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            android:textSize="12dp" />

        <TextView
            android:layout_below="@id/highlighttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@color/lightgray"
            android:layout_marginStart="110dp"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:src="@drawable/soundwave"
            android:layout_below="@id/highlighttext"
            android:layout_marginStart="40dp" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:src="@drawable/righticon"
            android:layout_below="@id/highlighttext"
            android:layout_marginStart="160dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 3, 2023"
            android:textColor="@color/lightgray"
            android:layout_marginTop="25dp"
            android:layout_marginStart="115dp" />

        <!-- Heart icons (stacked) -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="490dp"
            android:layout_marginStart="59dp"
            android:src="@drawable/heart3" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="510dp"
            android:layout_marginStart="26dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="580dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/heart2" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="620dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/heart1" />

    </RelativeLayout>

</RelativeLayout>
